{
  "manifest_version": 3,
  "name": "TaskForge",
  "version": "1.0.0",
  "description": "Add task to a planner",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "matches": ["https://tilde-front-dot-umuzi-prod.nw.r.appspot.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tilde Planner",
    "scripts": ["popup.js"],
    "persistent": false
  }
}
