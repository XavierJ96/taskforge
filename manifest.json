{
  "manifest_version": 3,
  "name": "TaskForge",
  "version": "1.1.030",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "tabs"],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-script-loader.content.jsx.js.js",
        "assets/content-script-loader.font-awesome.js.js"
      ],
      "matches": ["https://tilde-front-dot-umuzi-prod.nw.r.appspot.com/*"]
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["**/*", "*"],
      "use_dynamic_url": true
    }
  ]
}
