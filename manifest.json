{
  "manifest_version": 3,
  "name": "TaskForge",
  "version": "1.0.0",
  "description": "Add task to a planner",
  "icons": {
    "16": "./src/assets/icon16.png",
    "48": "./src/assets/icon48.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["./src/content/content.js"],
      "matches": ["https://tilde-front-dot-umuzi-prod.nw.r.appspot.com/*"]
    }
  ],
  "action": {
    "default_popup": "./src/popup/popup.html",
    "default_title": "Tilde Planner",
    "scripts": ["./src/popup/popup.js"],
    "persistent": false
  }
}
